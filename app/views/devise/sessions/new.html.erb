<div class="login-form">
  <p class="user-login-text">ログイン</p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group input-form">
    <%= f.label :username, 'ユーザー名'%><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
  </div>

  <div class="form-group input-form">
    <%= f.label :password, 'パスワード' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>
  
  <div class="flex submit-box">
    <% if devise_mapping.rememberable? %>
    <div class="form-group remember-check-box">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'ログイン情報を記憶しますか？' %>
    </div>
  <% end %>

  <div class="login-btn-block">
      <%= f.submit "ログイン", class: 'btn btn-info login-btn' %>
    </div>
  <% end %>
  </div>
</div>